<!--pages/native/choose-image/index.wxml-->
<view class="container">
  <view class="content" wx:if="{{uploading}}">
    <view class="upload-icon">
      <image src="/images/upload.png" mode="aspectFit"></image>
    </view>
    <text class="upload-text">正在上传图片...</text>
    <view class="progress-bar">
      <view class="progress-inner" style="width: {{uploadProgress}}%"></view>
    </view>
    <text class="progress-text">{{uploadProgress}}%</text>
  </view>
  
  <view class="actions" wx:if="{{!uploading}}">
    <button class="btn btn-primary" bindtap="onRetry">重新选择</button>
    <button class="btn btn-default" bindtap="onBack">返回</button>
  </view>
</view>
