/* pages/native/bind-phone/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  padding: 80rpx 32rpx 32rpx;
  background: #fff;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
}

.icon-wrapper image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
  max-width: 400rpx;
  margin-bottom: 60rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-default {
  background: #f5f5f5;
  color: #666;
}

.tips {
  width: 100%;
  padding: 32rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 16rpx;
}

.tips-item {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 1.8;
}
