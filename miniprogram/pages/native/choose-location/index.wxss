/* pages/native/choose-location/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 32rpx;
  background: #fff;
}

.content {
  width: 100%;
  margin-bottom: 60rpx;
}

.location-card {
  display: flex;
  align-items: flex-start;
  padding: 32rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
}

.location-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.location-icon text {
  color: #fff;
  font-size: 32rpx;
}

.location-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.location-city {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.location-address {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
  max-width: 400rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-default {
  background: #f5f5f5;
  color: #666;
}
